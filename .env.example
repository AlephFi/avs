# =============================================================================
# AlephAVS Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# Network Configuration
# =============================================================================
# RPC endpoint for the blockchain network
RPC_URL=https://1rpc.io/sepolia

# Chain ID (optional - will use block.chainid if not set)
# Mainnet: 1, Sepolia: 11155111, Goerli: 5
CHAIN_ID=11155111

# Etherscan API key for contract verification (optional)
ETHERSCAN_API_KEY=

# =============================================================================
# Operator Configuration
# =============================================================================
# Operator's private key (required for operator scripts)
# This is the private key of the EigenLayer operator
PRIVATE_KEY=

# =============================================================================
# Contract Addresses
# =============================================================================
# AlephAVS contract address (optional - will load from deployments/ if not set)
ALEPH_AVS_ADDRESS=

# Aleph vault address (required for vault operations)
ALEPH_VAULT_ADDRESS=

# Owner address for deployment (optional - defaults to deployer, or use SAFE_ADDRESS)
ALEPH_OWNER_ADDRESS=

# =============================================================================
# Allocation Configuration
# =============================================================================
# Amount to allocate to vault (in wei, e.g., "100000000000000000000" for 100 tokens)
ALLOCATE_AMOUNT=

# Share class ID (default: 0)
CLASS_ID=0

# Expiry block for auth signature (default: max uint256)
EXPIRY_BLOCK=

# =============================================================================
# Auth Signature Configuration
# =============================================================================
# Option 1: Pre-generated auth signature (recommended for AllocateToAlephVault.s.sol)
# Generate using: forge script script/GenerateAuthSignature.s.sol:GenerateAuthSignature --rpc-url $RPC_URL
# Then copy the AUTH_SIGNER_SIG output to this file
AUTH_SIGNER_SIG=

# Option 2: Auth signer private key (for GenerateAuthSignature.s.sol only)
# Only needed when generating signatures, not for AllocateToAlephVault.s.sol
# AllocateToAlephVault.s.sol will fallback to this if AUTH_SIGNER_SIG is not set (backward compatibility)
AUTH_SIGNER_PRIVATE_KEY=

# =============================================================================
# Strategy Deposit Signature Configuration
# =============================================================================
# Private key for signing strategy deposits (used in OnboardOperator.s.sol)
STRATEGY_DEPOSIT_SIGNER_PRIVATE_KEY=

# =============================================================================
# Safe Multisig Configuration
# =============================================================================
# Safe multisig wallet address (required for Safe scripts)
SAFE_ADDRESS=

# Safe API key (optional but recommended for higher rate limits)
# Get one at: https://developer.safe.global
SAFE_API_KEY=

# =============================================================================
# Additional Configuration (Optional)
# =============================================================================
# Allocation delay in blocks (used in OnboardOperator.s.sol, default: 0)
ALLOCATION_DELAY=

# Operator metadata URI (used in OnboardOperator.s.sol)
METADATA_URI=

# Delegation approver address (used in OnboardOperator.s.sol, default: address(0))
DELEGATION_APPROVER=

# Deposit amount for strategy (used in DepositToStrategy.s.sol, in wei)
DEPOSIT_AMOUNT=

# Strategy address (used in DepositToStrategy.s.sol)
STRATEGY_ADDRESS=

# LST strategy address (used in InitializeVault.s.sol)
LST_STRATEGY_ADDRESS=

# Aleph class ID (used in InitializeVault.s.sol)
ALEPH_CLASS_ID=

# =============================================================================
# Notes
# =============================================================================
# 1. For AllocateToAlephVault.s.sol:
#    - Use AUTH_SIGNER_SIG (pre-generated signature) - recommended
#    - Or fallback to AUTH_SIGNER_PRIVATE_KEY (for backward compatibility)
#
# 2. To generate AUTH_SIGNER_SIG:
#    - Set AUTH_SIGNER_PRIVATE_KEY, ALEPH_AVS_ADDRESS, ALEPH_VAULT_ADDRESS, CLASS_ID
#    - Run: forge script script/GenerateAuthSignature.s.sol:GenerateAuthSignature --rpc-url $RPC_URL
#    - Copy the AUTH_SIGNER_SIG output to this file
#
# 3. For Safe multisig operations:
#    - Set SAFE_ADDRESS and SAFE_API_KEY
#    - Set PRIVATE_KEY to a Safe owner's private key (for signing proposals)
#    - Install Node.js dependencies: npm install
