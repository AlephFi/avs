{
  "name": "alephavs",
  "version": "1.0.0",
  "description": "AlephAVS - Actively Validated Service for EigenLayer",
  "scripts": {
    "test": "forge test",
    "test:verbose": "forge test -vv",
    "test:gas": "forge test --gas-report",
    "build": "forge build",
    "build:sizes": "forge build --sizes",
    "coverage": "bash scripts/calculate_coverage.sh",
    "deploy": "bash scripts/bash/deploy.sh",
    "upgrade": "bash scripts/bash/upgrade.sh",
    "initialize-vault": "bash scripts/bash/initialize_vault.sh",
    "script:deploy": "bash -c 'source .env 2>/dev/null; forge script script/DeployAlephAVS.s.sol:DeployAlephAVS --rpc-url \"$RPC_URL\" --broadcast --verify'",
    "script:onboard-operator": "bash -c 'source .env 2>/dev/null; forge script script/OnboardOperator.s.sol:OnboardOperator --rpc-url \"$RPC_URL\" --broadcast'",
    "script:allocate": "bash -c 'source .env 2>/dev/null; forge script script/AllocateToAlephVault.s.sol:AllocateToAlephVault --rpc-url \"$RPC_URL\" --broadcast'",
    "script:deposit": "bash -c 'source .env 2>/dev/null; forge script script/DepositToStrategy.s.sol:DepositToStrategy --rpc-url \"$RPC_URL\" --broadcast'",
    "script:auth-signature": "bash -c 'source .env 2>/dev/null; forge script script/GenerateAuthSignature.s.sol:GenerateAuthSignature --rpc-url \"$RPC_URL\" --broadcast'",
    "script:mint-token": "bash -c 'source .env 2>/dev/null; forge script script/MintToken.s.sol:MintToken --rpc-url \"$RPC_URL\" --broadcast'",
    "script:request-unallocate": "bash -c 'source .env 2>/dev/null; forge script script/RequestUnallocate.s.sol:RequestUnallocate --rpc-url \"$RPC_URL\" --broadcast'",
    "script:complete-unallocate": "bash -c 'source .env 2>/dev/null; forge script script/CompleteUnallocate.s.sol:CompleteUnallocate --rpc-url \"$RPC_URL\" --broadcast'"
  },
  "dependencies": {
    "@safe-global/api-kit": "^4.0.0",
    "@safe-global/protocol-kit": "^6.1.0",
    "@safe-global/types-kit": "^3.0.0",
    "ethers": "^6.15.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

